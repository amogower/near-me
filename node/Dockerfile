FROM node:10.1.0-alpine as builder
RUN apk update && apk add git
WORKDIR /home
COPY package.json ./
COPY yarn.lock ./
ARG env=production
ENV NODE_ENV=${env}
RUN yarn install
COPY . .
ARG FOURSQUARE_CLIENT_ID
ARG FOURSQUARE_CLIENT_SECRET
ENV FOURSQUARE_CLIENT_ID=${FOURSQUARE_CLIENT_ID} FOURSQUARE_CLIENT_SECRET=${FOURSQUARE_CLIENT_SECRET}
RUN yarn build
FROM node:10.1.0-alpine
WORKDIR /home
COPY --from=builder /home /home
ARG env=production
ARG FOURSQUARE_CLIENT_ID
ARG FOURSQUARE_CLIENT_SECRET
ENV NODE_ENV=${env} FOURSQUARE_CLIENT_ID=${FOURSQUARE_CLIENT_ID} FOURSQUARE_CLIENT_SECRET=${FOURSQUARE_CLIENT_SECRET}
CMD ["node", "index.js"]
